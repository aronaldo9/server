{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "price": {
      "type": "decimal",
      "required": false
    },
    "discount": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "brand": {
      "type": "string",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "availability": {
      "type": "boolean",
      "required": true
    },
    "wallpaper": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "movement": {
      "type": "string"
    },
    "caliber": {
      "type": "string"
    },
    "waterResistant": {
      "type": "string"
    },
    "glass": {
      "type": "string"
    },
    "size": {
      "type": "string"
    }
  }
}
