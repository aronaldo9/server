{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "img": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "gallery": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "brand": {
      "type": "string",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "size": {
      "type": "integer"
    },
    "availability": {
      "type": "boolean",
      "required": true
    }
  }
}
